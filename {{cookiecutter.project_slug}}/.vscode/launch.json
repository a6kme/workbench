    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/ui",
        },
        {
            "name": "Uvicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": ["api.asgi:application", "--port", "8000", "--reload"],
            "cwd": "${workspaceFolder}/api",
            "django": true
        },
        {
            "name": "Run Command",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/api/manage.py",
            "args": ["run_local"],
            "django": true
        }
    ]
}